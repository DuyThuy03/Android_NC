<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Tiêu đề *"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEditTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="2" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Mô tả -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Mô tả"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEditDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:minHeight="100dp"
                android:maxLines="5" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Độ ưu tiên -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Độ ưu tiên"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgEditPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbEditHigh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cao"
                android:textColor="#D32F2F" />

            <RadioButton
                android:id="@+id/rbEditMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Trung bình"
                android:textColor="#FF9800" />

            <RadioButton
                android:id="@+id/rbEditLow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thấp"
                android:textColor="#2196F3" />
        </RadioGroup>

        <!-- Danh mục -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh mục"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerEditCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@android:drawable/btn_dropdown"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Ngày hết hạn -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày hết hạn"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnEditSelectDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chọn ngày"
                android:drawableStart="@android:drawable/ic_menu_my_calendar"
                android:drawablePadding="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Button
                android:id="@+id/btnEditSelectTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Chọn giờ"
                android:drawableStart="@android:drawable/ic_menu_recent_history"
                android:drawablePadding="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvEditSelectedDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chưa chọn ngày giờ"
            android:textColor="#757575"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="16dp" />

        <!-- Trạng thái -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trạng thái"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/cbEditCompleted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đánh dấu là hoàn thành"
            android:layout_marginBottom="16dp" />

        <!-- Subtasks -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Công việc con"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Nhập công việc con (mỗi dòng 1 công việc)"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEditSubtasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:minHeight="100dp"
                android:maxLines="5" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Ghi chú -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ghi chú"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Nhập ghi chú (mỗi dòng 1 ghi chú)"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEditNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:minHeight="100dp"
                android:maxLines="5" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</ScrollView>