<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">

    <!-- Search Bar Layout -->
    <LinearLayout
        android:id="@+id/searchBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Search Input Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_search_input"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                android:contentDescription="Search"
               />

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="TÃ¬m kiáº¿m task..."
                android:textSize="14sp"
                android:paddingHorizontal="12dp"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:maxLines="1" />

            <ImageButton
                android:id="@+id/btnClearSearch"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:visibility="gone"
                android:contentDescription="Clear" />

        </LinearLayout>

        <!-- ðŸ”¹ Thanh lá»c Æ°u tiÃªn (Priority Chips) -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chipHighPriority"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="ðŸ”´ High"
                    android:paddingHorizontal="16dp"
                    android:gravity="center"
                    android:background="@drawable/bg_chip_unselected"
                    android:textColor="#757575"
                    android:textSize="13sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/chipMediumPriority"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="ðŸŸ¡ Medium"
                    android:paddingHorizontal="16dp"
                    android:gravity="center"
                    android:background="@drawable/bg_chip_unselected"
                    android:textColor="#757575"
                    android:textSize="13sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/chipLowPriority"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="ðŸŸ¢ Low"
                    android:paddingHorizontal="16dp"
                    android:gravity="center"
                    android:background="@drawable/bg_chip_unselected"
                    android:textColor="#757575"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/chipCompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="âœ… HoÃ n thÃ nh"
                    android:paddingHorizontal="16dp"
                    android:gravity="center"
                    android:background="@drawable/bg_chip_unselected"
                    android:textColor="#757575"
                    android:textSize="13sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/chipPending"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="ðŸ•“ ChÆ°a xong"
                    android:paddingHorizontal="16dp"
                    android:gravity="center"
                    android:background="@drawable/bg_chip_unselected"
                    android:textColor="#757575"
                    android:textSize="13sp" />


            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- ProgressBar - Hiá»ƒn thá»‹ khi Ä‘ang táº£i dá»¯ liá»‡u -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/searchBarLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Danh sÃ¡ch Task -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tasksRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent" android:paddingTop="8dp"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/bottomSection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchBarLayout" />

    <!-- Bottom Section -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@android:color/white"
            android:elevation="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <ImageButton
                android:id="@+id/nav_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_menu" />

            <ImageButton
                android:id="@+id/nav_list"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_list" />

            <ImageButton
                android:id="@+id/nav_add"
                android:layout_width="48dp"
                android:layout_height="49dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/bg_circle"
                android:scaleType="centerInside"
                android:src="@drawable/ic_add" />

            <ImageButton
                android:id="@+id/nav_calendar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_calendar" />

            <ImageButton
                android:id="@+id/nav_notification"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_notification" />



        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
