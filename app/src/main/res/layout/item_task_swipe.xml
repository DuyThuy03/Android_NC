<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Background khi vuốt sang TRÁI (Xóa) -->
    <LinearLayout
        android:id="@+id/backgroundLeft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:gravity="end|center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="24dp"
       >

        <ImageView
            android:id="@+id/iconDelete"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_delete_red"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/iconShare"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_share_blue" />
    </LinearLayout>

    <!-- Background khi vuốt sang PHẢI (Sửa/Hoàn thành) -->
    <LinearLayout
        android:id="@+id/backgroundRight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        >

        <ImageView
            android:id="@+id/iconCheck"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_done_green" />


    </LinearLayout>

    <!-- Foreground - CardView chính -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTask"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:foreground="?attr/selectableItemBackground"
        android:elevation="6dp"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            >

            <TextView
                android:id="@+id/taskTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task 1"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/taskSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskTitle"
                android:layout_marginTop="4dp"
                android:text="Subtitle"
                android:textColor="#7F7F7F"
                android:textSize="14sp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
