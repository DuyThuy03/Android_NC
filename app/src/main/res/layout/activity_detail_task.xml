<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header với nút điều khiển -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#2196F3"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <!-- Nút quay lại -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_revert"
                android:tint="#FFFFFF"
                android:contentDescription="Quay lại" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Nút xóa -->
            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_delete"
                android:tint="#FFFFFF"
                android:contentDescription="Xóa nhiệm vụ" />

            <!-- Nút chỉnh sửa -->
            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_edit"
                android:tint="#FFFFFF"
                android:contentDescription="Chỉnh sửa" />

            <!-- Nút chia sẻ -->
            <ImageButton
                android:id="@+id/btnShare"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_share"
                android:tint="#FFFFFF"
                android:contentDescription="Chia sẻ" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Nội dung chính (ScrollView) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card thông tin chính -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Title -->
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hoàn thành báo cáo"
                        android:textColor="#212121"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Chips cho Priority và Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipPriority"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ưu tiên cao"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đang chờ" />
                    </LinearLayout>

                    <!-- Description -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mô tả:"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Viết xong chương 3"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Category -->
                    <TextView
                        android:id="@+id/tvCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Danh mục: học tập"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        android:drawableStart="@android:drawable/ic_menu_view"
                        android:drawablePadding="8dp" />

                    <!-- Due Date -->
                    <TextView
                        android:id="@+id/tvDueDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hạn: 19/12/2024 08:31"
                        android:textColor="#D32F2F"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        android:drawableStart="@android:drawable/ic_menu_recent_history"
                        android:drawablePadding="8dp" />

                    <!-- Created At -->
                    <TextView
                        android:id="@+id/tvCreatedAt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tạo lúc: 12/12/2024 14:00"
                        android:textColor="#757575"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <!-- Updated At -->
                    <TextView
                        android:id="@+id/tvUpdatedAt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cập nhật: 18/12/2024 22:26"
                        android:textColor="#757575"
                        android:textSize="12sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card Subtasks -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Danh sách công việc con"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvSubtasks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/item_subtask" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card Note -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ghi chú"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/etNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"
                        android:gravity="top"
                        android:hint="Nhập ghi chú..."
                        android:background="@android:drawable/edit_text"
                        android:padding="12dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>